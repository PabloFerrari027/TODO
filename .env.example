# Application environment (development, test, production)
NODE_ENV=

# Port where the server will run
PORT=

# List of allowed origins for CORS (comma separated)
# Example: http://localhost:3000,https://mywebsite.com
CORS_ORIGINS=

# Maximum response time in milliseconds
# Example: 10000 (10 seconds)
RESPONSE_TIMEOUT=

# Time window in seconds for rate limiting
# Example: 60 (1 minute)
RATE_LIMIT_TTL=

# Maximum number of requests allowed within the TTL
# Example: 100
RATE_LIMIT_LIMIT=

# Default language for templates (emails, messages, etc.)
# Example: pt-BR
TEMPLATE_LANGUAGE=

# Secret key used to sign JWT tokens
# Example: a_secure_random_string
JWT_SECRET=

# PostgreSQL database connection URL
# Example: postgres://user:password@host:5432/database
POSTGRESQL_DATABASE_URL=

# Redis connection URL
# Example: redis://default:password@host:6379
REDIS_URL=
